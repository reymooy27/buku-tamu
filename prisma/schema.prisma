generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tamu {
  id Int @id @default(autoincrement())
  nama String
  alamat String
  asalInstansi String?
  keperluan String?
  hp String?
  jenisKelamin String?
  jamMasuk DateTime @default(now())
  jamKeluar DateTime?
  keterangan String?
  kepuasan String?
}


model Session {
    id           Int      @id @default(autoincrement())
    sessionToken String   @unique
    userId       Int
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    @@index([userId])
}

model User {
    id            Int       @id @default(autoincrement())
    name          String?
    email         String?   
    image         String?
    username    String
    password    String
    sessions      Session[]
}